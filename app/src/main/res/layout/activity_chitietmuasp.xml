<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Thanhtoan.Chitietmuasp">

    <ImageView
        android:id="@+id/hinhmua"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="260dp" />
    <TextView
    android:id="@+id/tenmuasp"
    android:text="Tên sản phẩm"
    android:gravity="center"
    android:textStyle="bold"
    android:textSize="15dp"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/hinhmua"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/motamuasp"
        android:text="Mô tả sản phẩm"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tenmuasp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/giamuasp"
        android:text="Giá sản phẩm"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/motamuasp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/them"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/giamuasp"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textSize="16dp"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
<Button

    android:id="@+id/btmua"
    android:background="#63FF0000"
    android:text="Mua sản phẩm"
    android:layout_marginBottom="20dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</RelativeLayout>