<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tuchitinh"
    tools:context=".dangnhapki.Dangki_regin">


    <ImageView
        android:id="@+id/hinhanh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:src="@drawable/applogo"
        android:layout_width="300dp"
        android:layout_height="100dp" />
    <EditText
        android:id="@+id/tendangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hinhanh"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Nhap tên"
        android:textColor="#f000"
        android:textSize="17dp"
        android:padding="20dp"
        android:background="@drawable/input_desgin"
        />
    <EditText
        android:id="@+id/sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tendangnhap"
        android:layout_marginLeft="15dp"
        android:layout_marginRight  ="15dp"
        android:hint="Nhập số điện thoại"
        android:textColor="#f000"
        android:textSize="17dp"
        android:padding="20dp"
        android:background="@drawable/input_desgin"
        />
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight  ="15dp"
        android:hint="Nhap mật khẩu"
        android:textColor="#f000"
        android:textSize="17dp"
        android:padding="20dp"
        android:background="@drawable/input_desgin"
        />


    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:text="Đăng nhập"
        android:layout_below="@+id/pass"
        android:textColor="@android:color/white"
        />
</RelativeLayout>