<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#772962FF"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtten"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Tên khach hang"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sdt"
            android:textAlignment="viewEnd"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:textSize="14dp"
            android:text="Số dien thoai"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end" />
        <TextView
            android:id="@+id/khoqua"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Giá sản phẩm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtten"

            android:gravity="end" />
        <TextView
            android:id="@+id/quequan"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Dia chi"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bbb"
            android:gravity="end" />
        <TextView
            android:id="@+id/thoigian"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="Thoi gian dat hang"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quequan"
            android:gravity="end" />
    </RelativeLayout>
</RelativeLayout>