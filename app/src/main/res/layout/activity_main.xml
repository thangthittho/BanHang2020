<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".dangnhapki.MainActivity">

    <ImageView
        android:src="@drawable/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp" />
    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/textview"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="140dp"
        android:text="Chào mừng các bạn đến với phần mềm mua hàng online trên điện thoại"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"

        android:layout_marginRight="88dp" />

    <Button
        android:id="@+id/dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttons"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:text="Đã có tài khoản? Đăng nhập"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/dangki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dangnhap"
        android:layout_alignParentStart="true"
        android:background="@drawable/input_desgin"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Đăng kí "
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true" />
</RelativeLayout>